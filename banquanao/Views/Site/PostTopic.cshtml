
@model IEnumerable<MyClass.Models.PostInfo>
    @{ 
        var topic = ViewBag.Topic;
    }

@{
    ViewBag.Title = topic.Name;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@using banquanao.Library;

<section class="maincontent clearfix">
    <div class="container my-3">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="category-title position-relative">
                    <h2 class="text-center">@topic.Name</h2>
                </div>
                @foreach (var post in Model)
                {


                    <div class="row my-4">
                        <div class="col-md-3">
                            <a href="~/@post.Slug"><img src="~/Public/images/posts/@post.Img" class="img-fluid"></a>
                        </div>
                        <div class="col-md-8">
                            <h3><a href="~/@post.Slug">@post.Title</a></h3>
                            <p>@XString.Str_Limit(post.Detail, 1000)</p>
                            <div class="text-right"><a href="~/@post.Slug">Xem thêm</a></div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

