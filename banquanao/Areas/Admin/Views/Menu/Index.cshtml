@model IEnumerable<MyClass.Models.Menu>

@{
    ViewBag.Title = "Quản lý Hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

    <!<!-- Content Wrapper. Contains page content -->
@using (Html.BeginForm("Index", "Menu", FormMethod.Post))
{
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content my-2">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">
                                MENU
                            </strong>
                        </div>
                        <div class="col-6 text-right">
                            <a href="@Url.Action("Trash","Menu")" class="btn btn-sm btn-danger"><i class="fa fa-trash" aria-hidden="true"></i>Thùng Rác</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <div class="row">
                        <div class="col-md-3">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-header" id="headingPosition">
                                        <strong>Vị trí</strong>
                                        <select name="Position" class="form-control">
                                            <option value="mainmenu">MAIN MENU</option>
                                            <option value="footermenu">FOOTER MENU</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingCategory">
                                        <strong>Danh mục sản phẩm</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapseCategory" aria-expanded="true"
                                              aria-controls="collapseCategory">
                                            <i class="fas fa-plus"></i>
                                        </span>

                                    </div>

                                    <div id="collapseCategory" class="collapse p-2 m-2" aria-labelledby="headingCategory"
                                         data-parent="#accordionExample">
                                        @foreach (var category in ViewBag.ListCategory)
                                        {
                                            <fieldset class="form-group">
                                                <input name="itemcat" value="@category.Id" id="category_@category.Id" type="checkbox" />
                                                <label for="category_@category.Id">@category.Name</label>
                                            </fieldset>
                                        }

                                        <div class="mb-3">
                                            <input type="submit" name="ThemCategory" value="Thêm"
                                                   class="btn btn-success form-control">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card">
                                    <div class="card-header" id="headingTopic">
                                        <strong>Chủ đề bài viết</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapseTopic" aria-expanded="true" aria-controls="collapseTopic">
                                            <i class="fas fa-plus"></i>
                                        </span>

                                    </div>
                                    <div id="collapseTopic" class="collapse p-2 m-2" aria-labelledby="headingTopic"
                                         data-parent="#accordionExample">
                                        @foreach (var topic in ViewBag.ListTopic)
                                        {
                                            <fieldset class="form-group">
                                                <input name="itemtopic" value="@topic.Id" id="topic_@topic.Id" type="checkbox" />
                                                <label for="topic_@topic.Id">@topic.Name</label>
                                            </fieldset>
                                        }
                                        <div class="mb-3">
                                            <input type="submit" name="ThemTopic" value="Thêm"
                                                   class="btn btn-success form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingPage">
                                        <strong>Trang đơn</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapsePage" aria-expanded="true" aria-controls="collapsePage">
                                            <i class="fas fa-plus"></i>
                                        </span>
                                    </div>
                                    <div id="collapsePage" class="collapse p-2 m-2" aria-labelledby="headingPage">
                                        @foreach (var page in ViewBag.ListPage)
                                        {
                                            <fieldset class="form-group">
                                                <input name="itempage" value="@page.Id" id="page_@page.Id" type="checkbox" />
                                                <label for="page_@Page.Id">@page.Title</label>
                                            </fieldset>
                                        }
                                        <fieldset class="form-group">
                                            <input type="submit" name="ThemPage" value="Thêm"
                                                   class="btn btn-success form-control">
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingCustom">
                                        <strong>Tùy chỉnh</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapseCustom" aria-expanded="true" aria-controls="collapseCustom">
                                            <i class="fas fa-plus"></i>
                                        </span>
                                    </div>

                                    <div id="collapseCustom" class="collapse p-2 m-2" aria-labelledby="headingCustom"
                                         data-parent="#accordionExample">
                                        <div class="mb-3">
                                            <label>Tên menu</label>
                                            <input name="name" class="form-control" id="checkid" type="text">
                                        </div>
                                        <div class="mb-3">
                                            <label>Liên kết</label>
                                            <input name="link" class="form-control" type="text">
                                        </div>
                                        <div class="mb-3">
                                            <input type="submit" name="ThemCustom" value="Thêm"
                                                   class="btn btn-success form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Tên menu</th>
                                    <th>Liên kết</th> 
                                    <th>Vị trí</th>
                                    <th>Kiểu menu</th>
                                    <th>Chức năng</th>
                                    <th>ID</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Link</td>
                                        <td>@item.TypeMenu</td>
                                        <td>@item.Position</td>
                                        <td class="text-center">
                                            @if (item.Status == 1)
                                            {
                                                <a href="@Url.Action("Status","Menu", new { id = item.Id })" class="btn btn-sm btn-success"><i class="fa fa-toggle-on" aria-hidden="true"></i></a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Status","Menu", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fa fa-toggle-off" aria-hidden="true"></i></a>
                                            }
                                            <a href="@Url.Action("Details","Menu", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                            <a href="@Url.Action("Edit","Menu", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                            <a href="@Url.Action("DelTrash","Menu", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>



                                        </td>
                                        <td>@item.Id</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                    </div>
                </div>
        </section>
    </div>

}

