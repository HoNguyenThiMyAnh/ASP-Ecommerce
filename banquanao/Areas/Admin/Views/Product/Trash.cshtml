@model IEnumerable<MyClass.Models.ProductInfo>

@{
    ViewBag.Title = "Thùng rác danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section head {
    <link href="~/Public/css/cdn.datatables.net_1.13.5_css_jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer {
    <script src="~/Public/js/cdn.datatables.net_1.13.5_js_jquery.dataTables.min.js"></script>
    <script>
        let table = new DataTable('#myTable');
    </script>
}

<h2>Index</h2>
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">THÙNG RÁC DANH SÁCH SẢN PHẨM</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index","Product")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i> Về danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th class="text-center" style="width:180px;">Hình</th>
                            <th>Tên sản phẩm</th>
                            <th>Tên loại sản phẩm</th>
                            <th>Thương hiệu</th>
                            <th>Ngày tạo</th>
                            <th class="text-center" style="width:120px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkId" value="" /></td>
                                <td> @item.Name</td>
                                <td> @item.CatId</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created_At)
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Retrash","Product",new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-undo-alt"></i></a>
                                    <a href="@Url.Action("Delete","Product",new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash" aria-hidden="true"></i></a>

                                </td>
                                <td>
                                    @item.Id
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div> <!-- /.card-footer-->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
